# Valopilkku pys√§htyy, kun BTN1 pohjassa
# Ohjelma sulkeutuu, kun SW1 == 0

import time
from pynq.lib import Button
import tut.arduino_led_matrix as led_matrix
from pynq.lib import Switch


def main():
    led_matrix.init()
    button1 = Button(1)
    switch1 = Switch(1)
    vaaka = 0
    pysty = 1
    i = 0
    switch1.wait_for_value(1)

    while i < 10:

        while vaaka <= 7:
            led_matrix.set_led_color(vaaka, 0, 0, 255, 0)
            if button1.read() == 1:
                button1.wait_for_value(0)
                button1.wait_for_value(1)
            if switch1.read() == 0:
                break
            time.sleep(0.1)
            led_matrix.clear()
            vaaka += 1

        while pysty <= 7:
            led_matrix.set_led_color(7, pysty, 0, 255, 0)
            if button1.read() == 1:
                button1.wait_for_value(0)
                button1.wait_for_value(1)
            if switch1.read() == 0:
                break
            time.sleep(0.1)
            led_matrix.clear()
            pysty += 1

            vaaka = 6

        while vaaka >= 0:
            led_matrix.set_led_color(vaaka, 7, 0, 255, 0)
            if button1.read() == 1:
                button1.wait_for_value(0)
                button1.wait_for_value(1)
            if switch1.read() == 0:
                break
            time.sleep(0.1)
            led_matrix.clear()
            vaaka -= 1

            pysty = 6

        while pysty >= 0:
            led_matrix.set_led_color(0, pysty, 0, 255, 0)
            if button1.read() == 1:
                button1.wait_for_value(0)
                button1.wait_for_value(1)
            if switch1.read() == 0:
                break
            time.sleep(0.1)
            led_matrix.clear()
            pysty -= 1
        i += 1

    led_matrix.clear()


main()
